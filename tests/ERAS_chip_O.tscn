[sub_resource type="GDScript" id=2]
script/source = "extends Label

var component = null
var parent = null

func step(cycle) -> void:
	component.step()
	refresh(cycle)

func text_set() -> void:
	$Title.text  = component.id
	$Info.text   = component.output()
	if component.period > 1:
		$Period.text = str(component.period)
		$Period.show()
		$DUTY_CYCLE.show()
	else:
		$Period.hide()
		$DUTY_CYCLE.hide()

func refresh(cycle) -> void:
	text_set()
	if component.overheat > 0:
		$HEAT.value = component.overheat as float / 64.0
		self_modulate = Color(\"#FF0000\")
	else:
		$HEAT.value = component.heat as float / 8.0
		self_modulate = Color(\"#FFFFFF\")
		if component.period > 1:
			$DUTY_CYCLE.value = (cycle % component.period) as float / component.period as float
			if is_equal_approx($DUTY_CYCLE.value, 0.0):
				$DUTY_CYCLE.value = 1.0


func _on_Control_gui_input(event: InputEvent) -> void:
	if event is InputEventMouseButton and event.pressed and parent.cycle == 0: #On button press.
		print(event)
"

