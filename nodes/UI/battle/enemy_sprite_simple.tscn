script/source = "tool
extends Sprite

var nextVal:float = randf()
var count:float = randf()
var currentVal:float = randf()

func _ready() -> void:
	set_process(true)

func _process(delta: float) -> void:
	count += 0.1
	if count > 1.0:
		count = 0
		currentVal = nextVal
		nextVal = randf()
	modulate.a = lerp(currentVal, nextVal, count)
"

