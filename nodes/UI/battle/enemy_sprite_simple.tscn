code = "shader_type canvas_item;
render_mode blend_add;

uniform float radius = 16.0;

void fragment() {
	vec2 ps = TEXTURE_PIXEL_SIZE;
	vec4 col = vec4(0);
	float f = 1.0;
	for(f = 0.0; f < 16.0; f+=1.0){
		col += texture(TEXTURE, UV + vec2(f, 0.0) * ps) * ((16.0-f) / 16.0);
		col += texture(TEXTURE, UV - vec2(f, 0.0) * ps) * ((16.0-f) / 16.0);
	}
	COLOR = col / 7.0;
}
"

