[sub_resource type="GDScript" id=1]
script/source = "extends Control

var automaton = null
var parent    = null

func init(p, CA) -> void:
	automaton = CA
	parent    = p
	for i in automaton.data:
		var node:Label = Label.new()
		node.text = i
		node.mouse_filter = Control.MOUSE_FILTER_STOP
		$ScrollContainer/VBoxContainer.add_child(node)
		var err = node.connect(\"gui_input\"    , self, \"_on_gate_gui_input\"    , [i])
		err     = node.connect(\"mouse_entered\", self, \"_on_gate_mouse_entered\", [i])
		err     = node.connect(\"mouse_exited\" , self, \"_on_gate_mouse_exited\" , [i])

func tooltip(which:String) -> void:
	var d = automaton.data[which]
	$Tooltip/Title.text = d.name
	$Tooltip/Description.bbcode_text = d.desc
	if 'data' in d:
		var image = Image.new()
		image.create(d.data[0].size(), d.data.size(), false, Image.FORMAT_RGBA8)
		image.lock()
		automaton.core.draw_array(image, d.data, d.data[0].size(), d.data.size())
		image.unlock()
		$Tooltip/TextureRect.texture.create_from_image(image, 0)

func _on_gate_gui_input(event:InputEventMouse, which:String) -> void:
	if event is InputEventMouseButton and event.pressed: #On button press.
		if event.button_index == BUTTON_LEFT:
			if 'data' in automaton.data[which]:
				parent.draw_mode = parent.DRAW_PASTE
				parent.paste_buf = automaton.data[which].data.duplicate(true)

func _on_gate_mouse_entered(which: String) -> void:
	$Tooltip.show()
	tooltip(which)
	pass # Replace with function body.

func _on_gate_mouse_exited(which: String) -> void:
	$Tooltip.hide()
"

